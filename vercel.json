{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "client/dist",
  "framework": null,
  "regions": ["iad1"],
  "functions": {
    "api/index.js": {
      "maxDuration": 30,
      "memory": 1024
    },
    "api/process.js": {
      "maxDuration": 300,
      "memory": 3008
    }
  },
  "rewrites": [
    {
      "source": "/price-matching/(.*)",
      "destination": "/api"
    },
    {
      "source": "/user-management/(.*)", 
      "destination": "/api"
    },
    {
      "source": "/health",
      "destination": "/api"
    },
    {
      "source": "/api/process",
      "destination": "/api/process"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
} 