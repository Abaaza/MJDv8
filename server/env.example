# Server Environment Variables
# Copy this file to .env for development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/mjd-auth

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-minimum-32-characters
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# Admin User (for initial setup)
ADMIN_EMAIL=admin@mjd.com
ADMIN_PASSWORD=admin123
ADMIN_NAME=Administrator

# Server Configuration
PORT=3001
NODE_ENV=development

# Legacy Supabase (if still needed for price matching)
SUPABASE_URL=your_supabase_project_url
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# API Keys
COHERE_API_KEY=your_cohere_api_key
OPENAI_API_KEY=your_openai_api_key

# File Storage
VERCEL_BLOB_READ_WRITE_TOKEN=your_vercel_blob_token

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Python Configuration
PYTHON_EXECUTABLE=python

# Note: Cohere API key is now fetched from admin settings in your Supabase database
# No need to add COHERE_API_KEY here - just make sure it's set in your admin panel!